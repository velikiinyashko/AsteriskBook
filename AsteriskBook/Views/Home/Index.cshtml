@using AsteriskBook.ViewModels
@model LoginModel
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div>
        <div>
            <form asp-action="index" asp-antiforgery="true">
                <span></span>
                <div class="form-group">
                    <label class="form-control-label" asp-for="Login">Логин</label>
                    <input class="form-control" type="text" asp-for="Login" />
                </div>
                <div class="form-group">
                    <label class="form-control-label" asp-for="Password">Пароль</label>
                    <input class="form-control" type="password" asp-for="Password" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Вход"/>
                </div>
            </form>
        </div>
    </div>
</div>